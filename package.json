{
  "name": "ci-cd",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma-migrate-gen": "cd packages/db && pnpx prisma migrate dev --name init && pnpx prisma generate",
    "http-start": "cd apps/http && node ./dist/index.js",
    "ws-start": "cd apps/ws && tsc -b && node ./dist/index.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
